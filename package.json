{
  "name": "hbq-angular-boilerplate",
  "version": "1.0.0",
  "description": "一个完整的angular4开发模板项目",
  "keywords": [
    "angular",
    "angular2",
    "angular4",
    "webpack",
    "typescript"
  ],
  "scripts": {
    "clear": "rimraf dist",
    "tsc": "npm run clear && tsc",
    "start:size": "better-npm-run start:size",
    "start": "better-npm-run start",
    "clean": "better-npm-run remove",
    "open:dist": "lite-server --config ./dev-config/lite-server-config.js ",
    "build": "better-npm-run build:dev",
    "build:dev": "better-npm-run build:dev",
    "build:prod": "better-npm-run build:prod",
    "tree:dir": "treee -l 2 --ignore node_modules/,.git/",
    "lint": "tslint ./src/**/*.ts"
  },
  "betterScripts": {
    "start": {
      "command": "better-npm-run remove && better-npm-run dev"
    },
    "start:size": {
      "command": "better-npm-run remove && better-npm-run dev",
      "env": {
        "analysis": "1",
        "description": "运行构建后会自动打开包分析"
      }
    },
    "remove": {
      "command": "rimraf dist compiled"
    },
    "dev": {
      "command": "webpack-dev-server --config ./dev-config/webpack.config.js --open --progress --profile --watch --hotOnly",
      "env": {
        "NODE_ENV": "development",
        "IS_PROXY": true
      }
    },
    "build:dev": {
      "command": "better-npm-run remove && webpack --config ./dev-config/webpack.config.js --progress --display-error-details --profile",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "better-npm-run remove && webpack --config ./dev-config/webpack.config.js --progress --display-error-details --profile --bail",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
